# convert models to python3
cd $mpath
python3.9 $mgpath/bin/mg5_aMC

convert model ./MadGraph/MG5_aMC_v3_1_0/models/mono_spinhalf
convert model ./MadGraph/MG5_aMC_v3_1_0/models/mono_spinhalf_beta
convert model ./MadGraph/MG5_aMC_v3_1_0/models/mono_spinone
convert model ./MadGraph/MG5_aMC_v3_1_0/models/mono_spinone_beta
convert model ./MadGraph/MG5_aMC_v3_1_0/models/mono_spinzero
convert model ./MadGraph/MG5_aMC_v3_1_0/models/mono_spinzero_beta

# perform simulations ========================================================
./.doit

# to plot results ============================================================
O2init
python3.6 analyzer.py

